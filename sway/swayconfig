#!/bin/bash

echo -e '打开终端：mod+return'
echo -e '关闭窗口：mod+shift+q kill'
echo -e '启动器：mod+d menu'
echo -e '浮动装饰：mod'
echo -e '配置重载：mod+shift+c'
echo -e '退出：mod+shift+e'
echo -e '左右分裂：mod+b'
echo -e '上下分裂：mod+v'
echo -e '层叠：mod+s'
echo -e '选项卡：mod+w'
echo -e '横竖堆叠切换：mod+e'
echo -e '全屏：mod+f'
echo -e '浮动：mod+shift+space'
echo -e '堆叠和浮动的窗口切换：mod+space'
echo -e '切换到父容器：mod+a'
echo -e '暂存器：mod+shift+minus'
echo -e '从暂存器展示：mod+minus'